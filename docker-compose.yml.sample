version: "3"
services:
  jekyll:
    build: ./build
    env_file:
     - jekyll.env
    volumes:
      - ./app:/usr/src/app
      - ./output:/usr/local/app
    user: "1000:1000"
  nginx:
    image: nginx:latest
    volumes:
      - ./output:/usr/share/nginx/html
    environment:
      TZ: Asia/Tokyo